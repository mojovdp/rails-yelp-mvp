<h2><%= @restaurant.name %></h2>
<h4><%= @restaurant.category %></h4>
<h4><%= @restaurant.address %></h4>
<h4><%= @restaurant.phone_number %></h4>

<% @restaurant.reviews.each do |review| %>
  <h4><%= review.rating %></h4>
  <p><%= review.content %></p>
<% end %>

<p><%= link_to "Back to list", restaurants_path %></p>
<p><%= link_to "Add a review", new_restaurant_review_path(@restaurant) %></p>
